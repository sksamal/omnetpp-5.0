<config>
  <interface hosts='host1' names='eth0' address='10.0.1.1' netmask='255.255.255.0' mtu ='1500' metric='1' broadcast multicast/>
  <interface hosts='host2' names='eth0' address='10.0.2.1' netmask='255.255.255.0' mtu ='1500' metric='1' broadcast multicast/>
  <route hosts='H*' destination='*' netmask='*' interface='eth0'/>
</config>
